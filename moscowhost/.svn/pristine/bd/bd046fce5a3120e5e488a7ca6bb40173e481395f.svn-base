.overlay {
	background: rgba(0,0,0,.45);
    bottom: 0;
    cursor: default;
    left: 0;
    opacity: 0;
    position: fixed;
    right: 0;
    top: 0;
    visibility: hidden;
    z-index: 600;

    -webkit-transition: opacity .5s;
    -moz-transition: opacity .5s;
    -ms-transition: opacity .5s;
    -o-transition: opacity .5s;
    transition: opacity .5s;
}
.overlay:target {
    visibility: visible;
    opacity: 1;
}
.popup_personal {
	
 	padding: 2px;
	background: #fff;
	box-shadow: 0 0 5px rgba(20,52,89,.75), 0 0 46px rgba(23,110,215,.75);
	border-radius: 7px;
    display: inline-block;
    left: 50%;
    top: 40%;
    opacity: 0;
    position: fixed;
    text-align: justify;
    visibility: hidden;
    z-index: 99601 !important;
	
	-webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);

}

.popup_personal .captcha-input {
	position: absolute;
	margin-left: 5px;
	vertical-align: middle;
	width: 92px !important;
	padding: 5px;
	font-size: 18px;
}

.mngs {
	min-width: 400px;
}

.overlay:target+.popup_personal {
    top: 50%;
    opacity: 1;
    visibility: visible;
}


.popup_personal-close {
	position: absolute;
	top: 6px;
	right: 6px;
	display: block;
	width: 21px;
	height: 21px;
	background: url(/media/images/sprite_public.png) no-repeat -62px 0;
	cursor: pointer;
}



.popup_personal-close:after {
	position: absolute;
	top: -6px;
	left: -6px;
	display: block;
	width: 33px;
	height: 33px;
	content: '';
}

.popup_personal p {
    margin-bottom: 10px;
}
.popup_personal label {
    display: inline-block;
    text-align: left;
    width: 200px;
    margin-right:15px;
}

.popup_personal .form-row label {
	width: auto;
	margin: 0;
}

.popup_personal select,
.popup_personal input[type="text"],
.popup_personal input[type="password"] {
	width: 100%;
	margin: 0;
	padding: 4px 8px;
	background: #fff;
	box-shadow: inset 0 1px 0 rgba(0,0,0,.06);
	border: 1px solid #d4d4d4;
	border-radius: 4px;
	color: #535353;
	font: 11px Arial, sans-serif;
	-webkit-box-sizing: border-box;
	   -moz-box-sizing: border-box;
	        box-sizing: border-box;
}
.popup_personal select:focus,
.popup_personal input[type="text"]:focus,
.popup_personal input[type="password"]:focus {
	outline: none;
	box-shadow: inset 0 0 1px rgba(148,148,148,.59), 0 0 4px 1px #2884ea;
	border-color: #e6e6e6;
}

.popup_personal .select_number {
	font-size: 12px;
}

.popup_personal span {
	display: inline-block;
}

.popup_personal req {
	color: #f00;
}

.popup_personal .value {
	color: #3a7cbd;
}

.popup_personal table {
	margin: 0;
}

.popup_personal button {	
	display: inline-block;
	float: right;
	margin-right: 5px;
}

.popup_personal select {
	scrollbar-arrow-color: #FFF;   /* Цвет стрелок */
    scrollbar-base-color: #FFF; /* Цвет полосы прокрутки */
}

.popup_personal .but {
	margin-left: 5px;
}
::-webkit-scrollbar {
    width: 12px;
}
 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    border-radius: 10px;
}
 
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
}
::-webkit-scrollbar-button{
	border-radius:10px;
	background-color: #EDEDED;
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
	height:15px;
}

}
